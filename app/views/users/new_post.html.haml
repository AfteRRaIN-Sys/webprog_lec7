=simple_form_for(Post.new, as: :post, method: :post, url: :create_user_post) do |p|
	= p.error_notification
	= p.error_notification message: p.object.errors[:base].to_sentence if p.object.errors[:base].present?
	
	.form-inputs
		.row
			.col-md-6.col-12
				= p.input :msg
				-#= p.hidden_field :user_id

	.form_action
		= p.button :submit, value: "Create Post", class: "btn btn-outline-success", data: {disable_with: "Creating Post"}